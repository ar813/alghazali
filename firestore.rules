rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check role
    function hasRole(role) {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isSuperAdmin() {
      return hasRole('super_admin');
    }

    function isAdmin() {
      return hasRole('admin') || isSuperAdmin();
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      // Only Super Admin can update roles or delete users
      // Users can update their own display name (but not role)
      allow update: if isSuperAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      allow create: if isSuperAdmin(); // Only super admin can create new admin users directly? Or maybe auto-create on login?
      // Let's allow create if auth matches (for first login/registration) but default role must be handled carefully or set by cloud function. 
      // For now restricting create to super_admin or self (if self-registration allowed)
      allow write: if isSuperAdmin();
    }

    // Default rule for other collections (Students, Results, etc.)
    // Admin: Read only
    // Super Admin: Read & Write
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }
  }
}
